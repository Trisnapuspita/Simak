<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditLokasiActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar Lokasi Kontrakan Di JAKARTA :"
            android:layout_gravity="top"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pintu 1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:id="@+id/edit1"/>

            <Button
                android:text="Hapus"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/hapus1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pintu 2"
                android:textSize="20dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:id="@+id/edit2"/>

            <Button
                android:text="Hapus"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/hapus2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pintu 3"
                android:textSize="20dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:id="@+id/edit3"/>

            <Button
                android:text="Hapus"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/hapus3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pintu 4"
                android:textSize="20dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:id="@+id/edit4"/>

            <Button
                android:text="Hapus"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/hapus4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pintu 5"
                android:textSize="20dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:id="@+id/edit5"/>

            <Button
                android:text="Hapus"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/hapus5"/>
        </LinearLayout>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah Baru"
            android:id="@+id/pintubaru"/>

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</android.support.constraint.ConstraintLayout>