<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarLokasiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Lokasi Kontrakan Yang Terserdia:"
        android:layout_gravity="top"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"/>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/jakarta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Jakarta Timur"
                android:textSize="20dp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/depok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Depok"
                android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="Hapus"
            android:id="@+id/lokasibaru"/>
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:text="Tambah Baru"
                android:id="@+id/hapuslokasi"/>

        </LinearLayout>

    </LinearLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</android.support.constraint.ConstraintLayout>